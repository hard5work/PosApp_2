<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/titlenames"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#436D55"
        android:gravity="center"
        android:text="@string/select_your_combo"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/combo_cat_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlenames"
        android:layout_margin="2dp"
        android:minHeight="60dp"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/combo_cat_list"
        android:orientation="horizontal"
        android:weightSum="100">

        <Button
            android:id="@+id/combocatsaved"
            style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:drawableStart="@drawable/save"
            android:drawableLeft="@drawable/save"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:ignore="NestedWeights" />

        <Button
            android:id="@+id/combocatcancel"
            style="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:drawableStart="@drawable/cancel"
            android:drawableLeft="@drawable/cancel"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>